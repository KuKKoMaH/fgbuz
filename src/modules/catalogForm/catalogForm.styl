.catalogForm
  margin-bottom: 30px

  .rub
    margin-right: 8px

  &__aside
    width: 100%
    height: 307px
    position: relative;
    margin-bottom: 35px

  &__img
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-size: cover;
    background-position: 50% 50%
    opacity: 0
    pointer-events none
    z-index: -1
    border-radius: 5px
    anim(.3s)

    &--active
      opacity 1
      pointer-events all
      position: relative;
      z-index: 1

    .img
      max-width 100%
      margin: 0 auto
      display: block;

  &__body
    padding: 12px 28px 12px 12px
    margin: 0
    max-width none !important
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      padding: 12px 12px 24px

  &__price
    position: absolute;
    bottom: 35px
    padding-bottom: 15px
    left: 25px
    right: 25px
    color: #ffffff
    font-weight: 500
    font-size: 18px
    line-height: 1.35
    //display: flex;
    //align-items center
    //justify-content center
    text-align: center;
    border-bottom: 1px dashed rgba(#fff, .4);

    &--dark
      color: #1a1a1a
      border-bottom: 1px dashed rgba(#1a1a1a, .4);

  //&__content
  //  flex: 1

  &__footer
    display: flex;
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

    input
      margin-bottom: 0
      @media (max-width: $breakpoint-lg - 1)
        margin-bottom: 20px

    .btn
      flex-shrink 1
      margin-left: 24px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0px
        align-self flex-end
        width: auto;
        padding-left: 20px
        padding-right: 20px
      @media (max-width: $breakpoint-md - 1)
        align-self center

    &--onlyBtn
      & .btn
        margin: 0 auto
        width: auto;
        padding-left: 20px
        padding-right: 20px

  &__row
    display: flex;
    margin: 0 -6px 5px
    flex-wrap wrap

  //@media (max-width: $breakpoint-lg - 1)
  //  flex-direction column

  &__col
    margin: 0 6px
    flex: 1
    min-width 0
    margin-bottom: 15px
    @media (max-width: $breakpoint-lg - 1)
      flex auto
      width: 100%

    &--shrink
      flex auto 0
      margin-right: 15px
      @media (max-width: $breakpoint-lg - 1)
        width: auto;

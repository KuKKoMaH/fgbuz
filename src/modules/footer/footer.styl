.footer
  background: #11262d
  padding: 6rem 0 0
  color: #ffffff
  @media (max-width: $breakpoint-lg - 1)
    padding: 3rem 0 0

  &__top
    display: flex;
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      position: relative;

  &__left
    width: 300px
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      margin-bottom: 15rem

  &__logo
    flex-shrink 0
    position: relative;
    padding-left: 67px
    padding-top: 4px
    font-size: 1.15rem
    font-weight: 600
    line-height: 1.5
    margin-bottom: 1.5rem

    @media (max-width: $breakpoint-lg - 1)
      padding: 4px 0 4px 35px
      br
        display: none;

    &:before
      content: ''
      position: absolute;
      left: 0
      top: 50%
      transform translateY(-50%)
      background: url(../../images/sprite-logo.png)
      @media (max-width: $breakpoint-lg - 1)
        transform-origin 0 0
        top: 0
        transform scale(.5)

  &__text
    font-size: .85rem
    opacity: .25
    max-width 180px
    @media (max-width: $breakpoint-lg - 1)
      max-width none

  &__menu
    flex: 1
    @media (max-width: $breakpoint-lg - 1)
      border-top: 1px solid #293c42
      padding-top: 2.5rem

    > ul > li > a
      display: none;

    > ul
      display: flex;
      justify-content space-around

      > li
        margin: 0 10px

      > li > ul > li
        margin-bottom: .6rem

    ul
      margin: 0

    li
      padding-left: 0

      &:before
        display: none;

    a
      font-weight: 500
      color: #ffffff
      opacity: .5
      border: 0
      @media (max-width: $breakpoint-lg - 1)
        font-size: 1.2rem

      &:hover
        opacity: 1

  &__right
    position: relative;
    width: 180px
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      position: absolute;
      top: 8rem
      display: flex;
      flex-direction column-reverse
      text-align: center;
      left: 0
      width: 100%


  &__buttons
    & .outlineBtn
      background: #11262d
      color: #ffffff
      margin-bottom: 12px
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      margin: 0 -10px
      & .outlineBtn
        margin: 0 10px

  &__contacts
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 3rem

  &__label
    font-size: .85rem
    opacity: .5
    margin: 1rem 0 -0.5rem

  &__phone
    font-size: 1.25rem
    font-weight: 500
    border: 0
    color: #ffffff

  &__bottom
    display: flex;
    border-top: 1px solid #293c42
    margin-top: 4rem
    height: 70px
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column-reverse
      height: auto;
      margin-top: 2rem
      padding: 1rem 0

  &__copyright
    opacity: .25
    color: #ffffff
    margin-left: auto;
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      text-align: center;

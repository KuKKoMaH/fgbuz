.notFound
  margin: 6rem auto
  text-align: center;
  max-width 630px
  @media screen and (max-width: $breakpoint-lg - 1)
    margin: 2rem auto

  &__icon svg
    width: 70px
    height: 70px
    fill: url(#icon-blue-gradient)
    margin-bottom: 2rem
    @media screen and (max-width: $breakpoint-lg - 1)
      width: 40px
      height: 40px
      margin-bottom: 1rem

  h1
    font-size: 60px
    font-weight: 100
    margin-bottom: 2.5rem
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 40px
      margin-bottom: 1.5rem


.frontLicenses
  margin: 5rem 0 2rem

  &__container
    display: flex;
    @media screen and (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__documents
    flex: 1
    padding-right: 130px
    @media screen and (max-width: $breakpoint-lg - 1)
      padding-right: 0
      margin-bottom: 6rem

    h2
      margin-bottom: 1.5rem
      @media screen and (max-width: $breakpoint-lg - 1)
        margin-bottom: 2rem

  &__rating
    position: relative;
    width: 470px
    flex-shrink 0
    padding: 33px 40px
    @media screen and (max-width: $breakpoint-lg - 1)
      width: auto
      margin-left: -20px
      margin-right: -20px
      padding: 24px 20px

    &:before
      content: ''
      position: absolute;
      background: linear-gradient(to top, #42bde4, #76dbfc);
      border-radius: 7px
      left: 0
      top: 0
      width: 100%
      bottom: 126px
      z-index: -1
      @media screen and (max-width: $breakpoint-lg - 1)
        border-radius: 0
        bottom: 139px

    h2
      color: #ffffff
      font-size: 1.4rem
      margin-bottom: 2.5rem
      @media screen and (max-width: $breakpoint-lg - 1)
        font-size: 1.6rem

  &__item
    background: #f5fcfe
    margin-bottom: 10px
    border-radius: 7px
    display: flex;
    flex-direction column
    justify-content center
    height: 113px
    position: relative;
    overflow: hidden;
    padding-left: 144px
    @media screen and (max-width: $breakpoint-lg - 1)
      height: 90px

  &__photo
    position: absolute;
    width: 62px
    height: 62px
    border-radius: 50%
    left: 50px
    top: 50%
    transform translateY(-50%)
    @media screen and (max-width: $breakpoint-lg - 1)
      width: 60px
      height: 60px
      left: 36px

  &__cup
    position: absolute;
    left: 100%
    margin-left: -20px
    top: 50%
    transform translateY(-50%)
    height: 40px

  &__label
    position: absolute;
    width: 30px
    height: 30px
    background: linear-gradient(to top, #42bde4, #76dbfc);
    border-radius: 50%
    left: 30px
    top: 50%
    transform translateY(-50%)
    line-height: 30px
    font-weight: 500
    text-align: center;
    color: #ffffff
    @media screen and (max-width: $breakpoint-lg - 1)
      width: 24px
      height: 24px
      line-height: 24px
      left: 20px

  &__name
    line-height: 1.65

  &__position
    font-size: .85rem
    opacity: .5

  &__button
    text-align: center;
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-top: 3rem

.news
  margin-top: -3.5rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin: 0

  &__header
    display: flex;
    align-items flex-end
    @media screen and (max-width: $breakpoint-lg - 1)
      flex-direction column
      align-items stretch

  &__tags
    display: flex;
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-bottom: 2rem

  &__tag
    position: relative;
    display: block;
    margin-right: 8px
    border-radius: 3px
    border: 0
    //background: #ecf8fc
    font-weight: 500
    padding: 2px 9px 3px
    overflow: hidden;
    color: #ffffff
    anim()
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 1.2rem
      padding: 4px 10px 4px
      margin-right: 10px

    &:before
      content ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(to top, #41bce4, #76dbfc);
      z-index: -1

    &:hover
      background: #ecf8fc
      color: #e7533b

    &--active, &:active
      color: #42bde4
      background: #ecf8fc

  &__sort
    width: 370px
    margin-left: auto;
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-left: 0
      width: auto;

  &__items
    display: flex;
    flex-wrap wrap
    align-items flex-start
    margin: 0 -15px
    @media screen and (max-width: $breakpoint-lg - 1)
      flex-direction column
      margin: 0

  &__item
    padding: 80px 15px 0
    width: 33.3333%
    @media screen and (max-width: $breakpoint-lg - 1)
      padding: 40px 0 0
      width: 100%

.frontSlider
  position: relative;

  &__items
    display: flex;

  &__item
    flex-shrink 0
    height: 460px
    position: relative;
    overflow: hidden;
    padding-bottom: 2rem
    @media screen and (max-width: $breakpoint-lg - 1)
      height: 240px
      padding-bottom: 1.5rem

    &:after
      content: ''
      position: absolute;
      bottom: 0
      left: 0
      width: 100%
      height: 50%
      background: linear-gradient(to top, #11262d, rgba(#11262d, 0))

    .c
      height: 100%
      position: relative;
      z-index: 1
      display: flex;
      flex-direction column
      justify-content flex-end
      align-items flex-start

    img
      opacity: 0
      anim()
      position: absolute;
      top: 50%
      left: 50%
      transform translate(-50%, -50%)
      min-width 100%
      min-height 100%
      width: auto;
      height: auto;

      &.swiper-lazy-loaded
        opacity: 1

  &__title
    font-size: 2rem
    font-weight: 500
    background: linear-gradient(to top, #41bce4, #76dbfc);
    color: #ffffff
    border-radius: 7px
    padding: 0px 15px
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 1.6rem
      padding: 2px 10px

  &__text
    margin-top: 2rem
    color: #ffffff
    font-size: 1.15rem
    line-height: 1.85
    padding-left: 2rem
    max-width 500px
    @media screen and (max-width: $breakpoint-lg - 1)
      padding-left: 0
      margin-top: 1rem

  .arrowButton
    @media screen and (min-width: $breakpoint-lg)
      background: #ffffff

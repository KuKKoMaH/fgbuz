.header
  @media screen and (max-width: $breakpoint-lg - 1)
    padding-bottom: 2rem
  @media print
    display: none;
  &:before
    content ''
    display: block;
    height: 9px
    left: 0
    width: 100%
    background: linear-gradient(to bottom, #42bde4, #76dbfc);
    @media screen and (max-width: $breakpoint-lg - 1)
      background: linear-gradient(to top, #42bde4, #76dbfc);
      height: 45px

  &__top
    display: flex;
    //position: relative;
    align-items center
    height: 110px
    justify-content space-between
    @media screen and (max-width: $breakpoint-lg - 1)
      flex-wrap wrap
      padding-top: 20px
      height: auto;

  &__blind
    position: absolute;
    top: 0;

    left: calc(25% - 287px);
    background: #24b4e2
    border-radius: 0 0 7px 7px
    font-size: 0
    width: 62px;
    height: 33px
    z-index: 1
    anim()
    @media screen and (max-width: $breakpoint-lg - 1)
      position: static;
      width: 100%
      border-radius: 5px
      font-size: 1.2rem
      margin-bottom: 19px
      font-weight: 600
      color: #ffffff
      height: 40px

    &:hover
      background: #4cc2e9

    svg
      fill: #ffffff
      width: 38px
      height: 24px
      vertical-align: middle;
      @media screen and (max-width: $breakpoint-lg - 1)
        margin-right: 8px

  &__logo
    flex-shrink 0
    position: relative;
    padding: 4px 0 0 67px;
    font-size: 1.15rem
    font-weight: 600
    line-height: 1.5
    border: 0

    @media screen and (max-width: $breakpoint-lg - 1)
      padding-left: 35px
      padding-top: 0

    &:before
      content: ''
      position: absolute;
      left: 0
      top: 50%
      transform translateY(-50%)
      background: url(../../images/sprite-logo.png)
      @media screen and (max-width: $breakpoint-lg - 1)
        transform-origin 0 0
        top: 0
        transform scale(.5)

  &__address
    flex-shrink 0
    position: relative;
    padding-left: 25px
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: .9rem

    svg
      position: absolute;
      left: 0
      top: 50%
      transform translateY(-50%)
      fill: url(#icon-blue-gradient)
      width: 16px
      height: 20px

  &__buttons
    flex-shrink 0
    margin: 0 -5px
    @media screen and (max-width: $breakpoint-lg - 1)
      width calc(100% + 8px)
      display: flex;
      margin: 12px -4px 0

    .outlineBtn
      margin: 0 5px

  &__search
    width: 20px
    height: 20px
    position: relative;

    &:hover
      svg
        opacity: 0

        &.hover
          opacity: 1

    svg
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      anim()

      &.hover
        opacity: 0
        fill: url(#icon-blue-gradient)

      &.close
        opacity: 0

    @media screen and (max-width: $breakpoint-lg - 1)
      position: absolute;
      top: 0
      left: 50%
      width: 45px
      height: 45px
      margin-left: 295px
      z-index: 1
      background: linear-gradient(to top, #66cae9, #8fe2fc);

      svg
        width: 18px
        height: 18px
        left: 50%
        top: 50%
        transform translate(-50%, -50%)
        fill: #ffffff

      &:after
        content: ''
        position: absolute;
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: #ffffff
        z-index: 1
        opacity: 0
        anim()

      &:hover
        &:after
          opacity: .2

        svg
          opacity: 1

          &.hover, &.close
            opacity: 0

      &--active
        &, &:hover
          svg
            opacity: 0

            &.close
              opacity: 1


    @media screen and (max-width: $breakpoint-md - 1)
      left: auto;
      right: 20px

  &__contacts
    @media screen and (max-width: $breakpoint-lg - 1)
      position: absolute;
      top: 7px
      left: 0
      width: 100%
      text-align: center;

  &__label
    font-size: .85rem
    opacity: .5
    margin-bottom: -3px
    @media screen and (max-width: $breakpoint-lg - 1)
      opacity: .75
      color: #ffffff

  &__phone
    font-size: 1.125rem
    font-weight: 500
    color: $black
    border: 0

    &:hover
      color: $black

    @media screen and (max-width: $breakpoint-lg - 1)
      color: #ffffff

  &__bottom
    background: linear-gradient(to top, #42bde4, #76dbfc);

  &__menu
    display: flex;

    & > ul
      display: flex;
      flex: 1
      margin: 0
      padding: 0
      @media screen and (max-width: $breakpoint-lg - 1)
        display: none;

      > li
        position: static;
        margin: 0
        padding: 0
        flex: 1 1 auto

        &:hover > a
          &:after
            opacity: 1

        &:before
          display: none;

        &.menu-item-has-children > a span:after
          content: ''
          display: inline-block;
          vertical-align: middle;
          margin-left: 9px
          background: url(../../images/sprite-menu-arrow-white.png)

        > a
          height: 65px
          display: flex;
          justify-content center
          align-items center
          color: #ffffff
          font-weight: 500
          position: relative;
          z-index: 1
          border: 0

          &:before
            content ''
            position: absolute;
            width: 1px
            height: 100%
            top: 0
            left: auto;
            right: 0
            background: linear-gradient(to top, #66cae9, #8fe2fc);

          &:after
            content ''
            position: absolute;
            top: 0
            left: 0
            width: 100%
            height: 100%
            background: linear-gradient(to top, #66cae9, #8fe2fc);
            opacity: 0
            anim()

          span
            position: relative;
            z-index: 1

          &:hover
            text-decoration: none;

  &__hamburger
    position: relative;
    width: 65px
    flex-shrink 0
    //height: 100%
    background: linear-gradient(to top, #66cae9, #8fe2fc);
    @media screen and (max-width: $breakpoint-lg - 1)
      position: absolute;
      top: 0
      right: 50%
      margin-right: 295px
      width: 45px
      height: 45px
    @media screen and (max-width: $breakpoint-md - 1)
      right: auto;
      left: 20px

    &:before
      content: ''
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      opacity: 0
      background: linear-gradient(to top, #85d5ed, #a5e8fd);
      anim()

    &:hover
      &:before
        opacity: 1

    svg
      position: absolute;
      width: 43px;
      height: 28px;
      transform translate(-50%, -50%) scaleX(-1)
      fill: #ffffff
      z-index: 1
      top: 50%
      left: 50%
      opacity: 1
      anim()

    .close
      opacity: 0

    &--active
      svg
        opacity: 0

      & .close
        opacity: 1


@import "searchBlock.styl"
@import "menu.styl"

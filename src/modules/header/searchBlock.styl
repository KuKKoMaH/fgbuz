.searchBlock
  position: fixed
  top: 0
  left: 0
  background: rgba(#42bde4, .9);
  width: 100%
  height: 100%
  z-index: 10
  pointer-events none
  opacity: 0
  visibility: hidden;
  overflow: hidden;
  anim(.3s)
  @media screen and (max-width: $breakpoint-lg - 1)
    top: 45px

  &--active
    opacity: 1
    visibility: visible;
    pointer-events all

    .searchBlock
      &__container
        transform none;

  &__container
    background: #ffffff
    padding: 43px 0 49px
    position: relative;
    transform translateY(-50px)
    anim(.3s)
    @media screen and (max-width: $breakpoint-lg - 1)
      padding: 35px 0 40px

  &__label
    margin-bottom: 5px

    @media screen and (max-width: $breakpoint-lg - 1)
      margin-bottom: 12px

  &__block
    display: flex;
    @media screen and (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__input
    flex: 1

    input
      width: 100%
      border: 1px solid #42bde4
      border-radius: 7px 0 0 7px;
      font-size 1.15rem
      padding: 20px 30px 19px 33px
      @media screen and (max-width: $breakpoint-lg - 1)
        border-radius: 7px
        padding: 19px 25px 18px 25px

  &__tags
    margin-top: 21px
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-top: 18px

  &__tag
    font-size: .85rem
    margin-right: 20px
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 1rem

  &__button
    position: relative;
    z-index: 1
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-top: 30px

    .btn
      height: 70px
      @media screen and (max-width: $breakpoint-lg - 1)
        font-size: 1.6rem

      span
        padding: 0 30px

    .btn, span, .btn:before, .btn:after, span:after
      border-radius: 0 6px 6px 0
      @media screen and (max-width: $breakpoint-lg - 1)
        border-radius: 6px
        width: 100%


  &__close
    position: absolute;
    top: 100%
    left: 50%
    margin-left: 536px
    background: #f5fcfe
    border-radius: 0 0 7px 7px
    width: 50px
    height: 50px
    anim()
    @media screen and (max-width: $breakpoint-lg - 1)
      display: none;

    &:hover
      background: #fff;

    svg
      position: absolute;
      top: 17px
      left: 17px
      height: 17px
      width: 17px
      fill: $black

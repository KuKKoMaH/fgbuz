.smallCard
  display: block;
  border-radius: 6px
  background: #f5fcfe
  padding: 26px 29px
  border: 0
  @media screen and (max-width: $breakpoint-lg - 1)
    border-radius: 5px

  &__date
    margin-bottom: .5rem
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-bottom: 1rem

  &__title
    font-size: 1.15rem
    color: #42bde4
    line-height: 1.625
    font-weight: 500
    margin-bottom: .5rem
    anim()
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 1.4rem
      margin-bottom: 1rem

  &__text
    font-size: .85rem
    @media screen and (max-width: $breakpoint-lg - 1)
      line-height: 1.8
      font-size: 1rem

  .tags
    margin-top: 1rem
    @media screen and (max-width: $breakpoint-lg - 1)
      margin-top: 1.5rem

  &:hover
    .smallCard__title
      color: #e7533b

html
  font-family: 'Montserrat', sans-serif;
  color: $black
  font-size: 14px
  letter-spacing 0.025em
  line-height: 1.85
  @media screen and (max-width: $breakpoint-lg - 1)
    font-size: 10px
    line-height: 1.8

@media print {
  @page {
    margin: 1cm;
  }
}

html, body
  overflow-x: hidden

.c
  padding: 0 15px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media screen and (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 20px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%

.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.center
  text-align: center;

.small
  font-size: .85rem
  opacity: .5

.loadMore
  margin-top: 5rem
  text-align: center;
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-top: 3rem

  a
    font-size: 1.15em
    font-weight: 500
    @media screen and (max-width: $breakpoint-lg - 1)
      font-size: 1.4rem

.document
  padding-left: 40px
  position: relative;
  display: block;
  margin-bottom: 2rem
  border: 0
  min-height 45px
  font-size: 1rem
  page-break-inside: avoid;
  @media screen and (max-width: $breakpoint-lg - 1)
    padding-left: 32px

  span
    border-bottom: 1px solid $black
    //padding-bottom: 2px
    line-height: 1.65
    anim()

  svg
    position: absolute;
    width: 36px;
    height: 36px;
    fill: url(#icon-blue-gradient);
    left: -3px;
    top: 10px;
    anim()
    @media screen and (max-width: $breakpoint-lg - 1)
      width: 28px
      height: 28px

  &:hover
    span
      color: #e7533b
      border-color: #e7533b

    svg
      fill #e7533b

.youtube
  position: relative;
  margin-bottom: 3rem
  border-radius: 7px
  background-size: cover
  background-position: 50% 50%
  cursor: pointer;
  overflow: hidden;
  page-break-inside: avoid;

  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 3.5rem
    border-radius: 5px

  &:hover
    &:after
      opacity: .5

  &:before
    content: ''
    display: block;
    padding-top: 56.25%

  &:after
    content: ''
    position: absolute;
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: #11262d
    opacity: .75
    anim()
    @media print
      display: none;

  img
    position: absolute;
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
    min-width 100%
    min-height 100%
    width: auto;
    height: auto;

  svg
    position: absolute;
    width: 70px
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
    z-index: 1


  iframe
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height 100%
    z-index: 2

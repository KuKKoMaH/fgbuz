.slider
  border-radius: 7px
  overflow: hidden;
  max-width 100%
  margin-bottom: 3rem
  position: relative;
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 3.5rem
    border-radius: 5px

  &__items
    display: flex;
    align-items flex-start
    @media print
      height: auto !important
      transform none !important
      display: block;

  &__item
    width: 100%
    flex-shrink 0
    position: relative;
    page-break-inside: avoid;
    @media print
      width: 100% !important
      margin-bottom: 1rem
      border-radius: 7px
      overflow: hidden;
      &.swiper-slide-duplicate
        display: none;

    img
      width: 100%
      height: auto;

    &:after
      content: ''
      position: absolute;
      bottom: 0
      left: 0
      width: 100%
      height: 100px
      background: linear-gradient(to top, #11262d, rgba(#11262d, 0))
      opacity: .7
      @media print
        display: none;


  &__title
    position: absolute;
    bottom: 50px
    left: 50px
    font-size: 1.4rem
    padding: 5px 16px 4px
    color: #ffffff
    background: linear-gradient(to top, #42bde4, #76dbfc);
    border-radius: 7px
    z-index: 1
    @media screen and (max-width: $breakpoint-lg - 1)
      left: 50%
      transform translateX(-50%)
      bottom: 10px
      font-size: 1.2rem
      padding: 4px 10px
      border-radius: 5px

  .arrowButton
    top: auto;
    background: #ffffff
    @media print
      display: none;

    &--left
      left: auto;
      right: 111px;
      bottom: 20px;
      border-radius: 7px 0 0 7px
      @media screen and (max-width: $breakpoint-lg - 1)
        right: auto;
        left: 10px

    &--right
      left: auto;
      right: 50px;
      bottom: 20px;
      border-radius: 0 7px 7px 0
      width: 61px
      border-left: 1px solid #eef0f0
      @media screen and (max-width: $breakpoint-lg - 1)
        width: 40px
        right: 10px

    @media screen and (max-width: $breakpoint-lg - 1)
      border: 0
      bottom: auto;
      top: 50%
      svg
        fill: $blue

.btn
  display: inline-block
  position: relative
  font-weight: 500
  height: 55px
  //background: linear-gradient(to top, #4cc2e9, #a6e7fd);
  border-radius: 6px
  padding: 2px 2px 7px
  border: 0
  line-height: 1.25
  @media screen and (max-width: $breakpoint-lg - 1)
    font-size: 1.4rem

  //border-bottom: 5px solid #3aa6ca;

  &:before, &:after
    content: ''
    position: absolute;
    left: 0
    right: 0

  &:before
    bottom: 0
    height: 20px
    border-radius: 6px
    background: #3aa6ca
    z-index: 1

  &:after
    top: 0
    bottom: 5px
    background: linear-gradient(to top, #4cc2e9, #a6e7fd);
    border-radius: 6px
    z-index: 2
    anim()

  span
    color: #ffffff
    position: relative;
    display: flex;
    align-items center
    justify-content center
    text-align: center
    height: 100%
    background: linear-gradient(to top, #41bce4, #76dbfc);
    padding: 0 20px
    border-radius: 6px
    z-index: 3
    anim()
    transform translateY(0)

    &:after
      content ''
      top: 0
      left: 0
      width: 100%
      height: 100%
      border-radius: 6px
      position: absolute;
      background: #ffffff
      opacity: 0
      z-index: 4
      anim()

  //z-index: 1
  //transform translateY(-4px)

  &:focus
    outline 0

  &:hover
    span:after
      opacity: .2

  &:active, &--active
    text-decoration: none;

    span, &:after
      transform translateY(3px)

    span:after
      opacity: .2

  &--block
    width: 100%

  &--big
    height: 70px
    width: 250px
    @media screen and (max-width: $breakpoint-lg - 1)
      width: 100%

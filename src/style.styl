@import "destyle.css/destyle.css"

@import "stylus/_fonts.styl";
@import "stylus/_vars.styl";
@import "stylus/_mixins.styl";

html
  font-family: 'Montserrat', sans-serif;
  color: $black
  font-size: 14px
  letter-spacing 0.025em
  line-height: 1.85
  @media (max-width: $breakpoint-lg - 1)
    font-size: 10px
    line-height: 1.8

html, body
  overflow-x: hidden

h2
  font-size: 2rem
  line-height: 1.4
  font-weight: 500
  margin-bottom: 4rem

b
  font-weight: bold

p
  margin-bottom: 1rem

a
  color: $black
  border-bottom: 1px solid #42bde4
  padding-bottom: 2px
  anim()

  &:hover
    border-color: #e7533b

ul, ol
  margin-bottom: 1.55em

  li
    margin-bottom: 1em
    position relative

ul
  li
    padding-left: 22px

    &:before
      content: ''
      width: 7px
      height: 7px
      background: #e43641
      border-radius: 50%
      position absolute
      top: .6em;
      left: 2px;

ol
  counter-reset: list;

  li
    padding-left: 24px

    &:before
      counter-increment: list;
      content: counter(list) "."
      position absolute
      top: 0;
      left: 2px;
      color: #d73436
      font-weight: bold;

.c
  padding: 0 15px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 20px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%


.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.zoom
  cursor: pointer;

  &:after
    content: ''
    display: block
    position: absolute
    z-index: 1
    anim(.2s)
    left: 50%
    top: 50%
    margin-left: -45px
    margin-top: -45px
    background: rgba(#e21d2b, .45) url('data:image/png;base64,') 50% 50% no-repeat;
    width: 90px
    height: 90px
    border-radius: 50%
    opacity 0

  &:hover:after
    opacity 1

del, s
  text-decoration: line-through

.center
  text-align: center;

